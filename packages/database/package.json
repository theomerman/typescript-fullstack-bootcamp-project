{
    "name": "@repo/db",
    "version": "0.0.0",
    "dependencies": {
        "@prisma/client": "5.22.0"
    },
    "devDependencies": {
        "prisma": "5.22.0"
    },
    "scripts": {
        "db:start": "docker compose up -d",
        "db:stop": "docker compose down",
        "db:generate": "prisma generate",
        "db:migrate": "prisma db push --skip-generate",
        "db:seed": "tsx ./src/seed.ts"
    },
    "exports": {
        ".": {
            "import": "./src/index.ts",
            "require": "./dist/index.js"
        }
    }
}
