{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "dependsOn": ["^build", "^db:generate"],
            "inputs": ["$TURBO_DEFAULT$", ".env*"],
            "outputs": ["dist/**"]
        },
        "lint": {
            "dependsOn": ["^lint"]
        },
        "dev": {
            "dependsOn": ["^db:generate"],
            "cache": false,
            "persistent": true
        },
        "start": {
            "dependsOn": ["build"],
            "cache": false,
            "persistent": true
        },
        "db:start": {
            "cache": false
        },
        "db:stop": {
            "cache": false
        },
        "db:generate": {
            "cache": false
        },
        "db:migrate": {
            "cache": false
        },
        "db:seed": {
            "cache": false
        },
        "test": {},
        "e2e:run": {
            "cache": false
        },
        "e2e:report": {}
    }
}
